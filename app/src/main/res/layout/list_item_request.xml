<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/list_item_thumbnail_req"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_man" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is row number 15"
        android:id="@+id/list_item_text_req"
        android:layout_alignBottom="@+id/acceptButton"
        android:layout_toLeftOf="@+id/acceptButton"
        android:layout_toStartOf="@+id/acceptButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/acceptButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rejectButton"
        android:layout_toStartOf="@+id/rejectButton" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:layout_alignParentRight="true"
        android:id="@+id/rejectButton"/>
</RelativeLayout>